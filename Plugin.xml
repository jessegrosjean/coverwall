<?xml version="1.0" encoding="UTF-8"?>

<plugin
	id="com.hogbaysoftware.CoverWall"
	label="CoverWall Application"
	version="1.0.0"
	info="CoverWall Application">

	<requirement bundle="com.blocks.Blocks" version="1.0.0" />
	<requirement bundle="com.blocks.BLicenseManager" version="1.0.0" />
		
	<extension point="com.blocks.BLicenseManager.licenses">
		<declareLicenses class="CWApplication sharedApplication" />
	</extension>

	<extension point="com.blocks.BUserInterface.menus" processOrder="2">
		<menu id="com.blocks.BUserInterface.menus.main.application">
			<menuitem title="%About CoverWall" id="about" />
			<menuitem title="%Hide CoverWall" id="hide" />
			<menuitem title="%Quit CoverWall" id="quit" />
		</menu>
		
		<menu id="com.blocks.BUserInterface.menus.main.help">
			<menuitem title="%CoverWall Help" id="help" />
		</menu>
	</extension>

</plugin>